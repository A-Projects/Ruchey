+    key <AE10> { [          0,   parenright, guillemotright ] };
+    key <AE11> { [      minus,   underscore,     VoidSymbol ] };
+    key <AE12> { [      equal,         plus,     VoidSymbol ] };
+
+    key <AD11> { [ VoidSymbol,   VoidSymbol,      braceleft ] };
+    key <AD12> { [ VoidSymbol,   VoidSymbol,     braceright ] };
+
+    key <AC10> { [ VoidSymbol,   VoidSymbol,    bracketleft ] };
